{
    "swagger": "2.0",
    "info": {
        "description": "GOMS API server",
        "title": "Backend API",
        "termsOfService": "https://pramirez.dev",
        "contact": {
            "name": "Pablo Ramirez",
            "url": "https://pramirez.dev",
            "email": "pablo@pramirez.dev"
        },
        "version": "1.0.0"
    },
    "paths": {
        "/auth/login": {
            "post": {
                "description": "Login",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Auth"
                ],
                "summary": "Login",
                "parameters": [
                    {
                        "description": "dtos.UserLoginInput",
                        "name": "input",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/UserLoginInput"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/UserLoginResponse"
                        }
                    }
                }
            }
        },
        "/ping": {
            "get": {
                "description": "Health check",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "health"
                ],
                "responses": {
                    "200": {
                        "description": "pong",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "User": {
            "type": "object",
            "properties": {
                "created_at": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "first_name": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "lang": {
                    "type": "string"
                },
                "last_name": {
                    "type": "string"
                },
                "phone_number": {
                    "type": "string"
                },
                "role": {
                    "$ref": "#/definitions/UserRole"
                },
                "status": {
                    "$ref": "#/definitions/UserStatus"
                },
                "updated_at": {
                    "type": "string"
                }
            }
        },
        "UserLoginInput": {
            "type": "object",
            "properties": {
                "data": {
                    "type": "object",
                    "additionalProperties": true
                },
                "field_name": {
                    "type": "string"
                },
                "field_value": {
                    "type": "string"
                }
            }
        },
        "UserLoginResponse": {
            "type": "object",
            "properties": {
                "error": {},
                "message": {
                    "type": "string"
                },
                "result": {
                    "$ref": "#/definitions/UserResponseLoginData"
                },
                "status_code": {
                    "type": "integer",
                    "default": 200
                },
                "status_message": {
                    "type": "string",
                    "default": "Ok"
                }
            }
        },
        "UserResponseLoginData": {
            "type": "object",
            "properties": {
                "user": {
                    "$ref": "#/definitions/User"
                }
            }
        },
        "UserRole": {
            "type": "string",
            "enum": [
                "ADMIN",
                "USER"
            ],
            "x-enum-varnames": [
                "RoleAdmin",
                "RoleUser"
            ]
        },
        "UserStatus": {
            "type": "string",
            "enum": [
                "ACTIVE",
                "INACTIVE"
            ],
            "x-enum-varnames": [
                "StatusActive",
                "StatusInactive"
            ]
        }
    },
    "security": [
        {
            "AuthorizationHeader read write": []
        }
    ]
}